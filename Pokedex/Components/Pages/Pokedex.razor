@page "/pokedex"

<h1>Pokédex</h1>

<p>Click "Load Pokémon" to fetch Pokémon data.</p>

<button class="load-button" @onclick="FetchPokemonData">Load Pokémon</button>

@if (isLoading)
{
    <p>Loading...</p>
}
else if (pokemons.Any())
{
    <div class="card-container">
        @foreach (var pokemon in pokemons)
        {
            <div class="card">
                <img src="@pokemon.ImageUrl" alt="@pokemon.Name" class="card-img" />
                <div class="card-content">
                    <h3>@pokemon.Name</h3>
                    <button class="detail-button" @onclick="() => ShowPokemonDetails(pokemon)">View Details</button>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No Pokémon data available.</p>
}

@code {
    [Inject]
    private PokedexService PokedexService { get; set; }

    private List<Pokemon> pokemons = new();
    private bool isLoading = false;

    private async Task FetchPokemonData()
    {
        isLoading = true;
        try
        {
            pokemons = await PokedexService.GetPokemonsAsync(1, 10);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowPokemonDetails(Pokemon pokemon)
    {
        Console.WriteLine($"Viewing details for {pokemon.Name}");
    }
}
